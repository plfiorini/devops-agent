{
	"name": "devops-agent",
	"version": "1.0.0",
	"description": "AI agent for DevOps engineers and cloud architects to automate tasks and manage infrastructure using LLMs.",
	"type": "module",
	"private": true,
	"keywords": [
		"devops",
		"ai",
		"agent",
		"tools",
		"llm",
		"openai",
		"gemini",
		"anthropic"
	],
	"author": "Pier Luigi Fiorini",
	"license": "AGPL-3.0-only",
	"main": "src/index.ts",
	"engines": {
		"node": ">=24.0.0"
	},
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build": "tsc",
		"check": "biome check",
		"check:fix": "biome check --fix",
		"format": "biome format",
		"format:write": "biome format --write",
		"lint": "biome lint",
		"start": "node --disable-warning=ExperimentalWarning  --experimental-transform-types src/index.ts",
		"dev": "node --disable-warning=ExperimentalWarning  --experimental-transform-types --watch src/index.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/marked-terminal": "^6.1.1",
		"@types/node": "^24.0.1",
		"tsx": "^4.20.1",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.54.0",
		"@google/generative-ai": "^0.24.1",
		"marked": "^15.0.12",
		"marked-terminal": "^7.3.0",
		"openai": "^5.3.0",
		"readline": "^1.3.0",
		"yaml": "^2.8.0",
		"zod": "^3.25.62"
	}
}
